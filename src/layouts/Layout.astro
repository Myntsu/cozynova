---
export interface Props {
  title?: string;
  ogTitle?: string;
  ogDescription?: string;
  ogUrl: string;
  canonical: string;
  favicon?: string;
  faviconLight?: string;
}

const { title = 'Cozy Nova' } = Astro.props as Props;
const { ogTitle = 'Cozy Nova' } = Astro.props as Props;
const { ogDescription = 'Cozy Nova content page. No additional fetched information.' } = Astro.props as Props;
const { ogUrl } = Astro.props as Props;
const { canonical } = Astro.props as Props;
const { favicon = '/favicon/sword.svg' } = Astro.props as Props;
const { faviconLight = '/favicon/sword_black.svg' } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href={favicon} media="(prefers-color-scheme: dark)" />
  <link rel="icon" type="image/svg+xml" href={faviconLight} media="(prefers-color-scheme: light)" />
  <meta name="generator" content={Astro.generator} />
  <meta name="description" content="" />
  <title>{title}</title>
  <meta property="og:type" content="website" />
  <meta property="og:title" content={ogTitle} />
  <meta property="og:description" content={ogDescription} />
  <meta property="og:url" content={ogUrl} />
  <meta property="og:image" content="https://www.novaragnarok.com/themes/new/img/logo.png" />
  <meta property="og:image:alt" content="Logo" />
  <meta property="og:image:width" content="320" />
  <meta property="og:image:height" content="180" />

  <link rel="canonical" href={canonical} />

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <!-- DM Sans -->
  <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&display=swap" rel="stylesheet" />

  <!-- Font Awesome -->
  <script defer src="https://kit.fontawesome.com/76c49369ed.js" crossorigin="anonymous"></script>
</head>

<body>
<a class="skip-link" href="#Main">Skip to main content</a>

<nav class="navbar navbar-expand-lg navbar-dark px-3 px-lg-5 py-1 py-lg-0">
	<div class="container-fluid">
		<a href="/" id="Cozy-Nova" class="header">
		<img src="/assets/img/logo/memberLoginLogo.webp" alt="Logo" width="24" height="24" /> Cozy Nova
		</a>
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarSupportedContent">
		<ul class="navbar-nav me-auto mb-2 mb-lg-0 site-navbar-list gap-0 gap-lg-2">
			<li class="nav-item">
			<a class="nav-link" aria-current="page" href="/">Home</a>
			</li>
			<li class="nav-item dropdown">
			<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
				Class Guides
			</a>
			<ul class="dropdown-menu">
				<li>
				<a class="dropdown-item" href="/windcutter">Wind Cutter</a>
				</li>
			</ul>
			</li>
			<li class="nav-item">
			<a class="nav-link disabled" href="#">Cards</a>
			</li>
			<li class="nav-item">
			<a class="nav-link" href="/cooking">Halloween</a>
			</li>
		</ul>
		</div>
	</div>
</nav>

	<!-- Slot -->
	<slot></slot>

<footer>
	<p>Created by <i class="fa-brands fa-discord"></i> Myndi#5041</p>
	<span class="d-none d-md-inline">|</span>
	<a href="https://www.buymeacoffee.com/myndi"><i class="fa-solid fa-mug-saucer"></i> <span>Buy me a coffee</span>
	</a>
</footer>

<!-- Back to top button -->
<button type="button" id="btn-back-to-top">
	<i class="fas fa-arrow-up"></i>
</button>

<style is:global>
	:root {
	--nav-link: 0, 0%, 100%; /* white */
	
	--white: 0, 0%, 100%;
	--black: 0, 0%, 20%;
	
	--code: 0, 0%, 20%;
	--code-contrast: 0, 0%, 10%;
	--code-text: 0, 0%, 90%;
	
	--main-dark: 221, 64%, 19%; /* dark-blue */
	--main-light: 221, 40%, 49%; /* light-blue */

	--main-light-1: 221, 50%, 27%;
	--main-light-2: 221, 54%, 34%;
	--main-light-3: 221, 54%, 40%;

	--text: 0, 0%, 91%; /* snow */
	--header: 49, 85%, 65%; /* golden */
	--important: 343, 100%, 66%; /* red */
	--number: 120, 68%, 62%; /* green */
	--low-focus: 244, 55%, 70%; /* lavender */

	--curiosity: 36, 90%, 60%; /* orange */

	}

	.theme-changer #dark-blue {
  --radio-color: #2f529d;
}

.theme-changer #dark {
  --radio-color: #5D5F71;
}

.theme-changer #red {
  --radio-color: #f27d74;
}

.theme-changer #green {
  --radio-color: #B9F5D8;
}

.dark-blue,
:root:has(#dark-blue:checked) {
	--main-dark: 221, 60%, 19%;
	--main-light: 221, 55%, 45%;

	--main-light-1: 221, 60%, 27%;
	--main-light-2: 221, 60%, 34%;
	--main-light-3: 221, 60%, 40%;

	--text: 0, 0%, 91%;
	--header: 49, 85%, 65%;
	--important: 343, 100%, 66%;
	--number: 120, 68%, 62%;
	--low-focus: 244, 55%, 70%;
}

.dark,
:root:has(#dark:checked) {
	--main-dark: 0, 0%, 15%;
	--main-light: 0, 0%, 35%;

	--main-light-1: 0, 0%, 20%;
	--main-light-2: 0, 0%, 24%;
	--main-light-3: 0, 0%, 29%;

	--text: 0, 0%, 95%;
	--header: 0, 70%, 60%;
	--important: 211, 53%, 60%;
	--number: 52, 100%, 65%;
	--low-focus: 297, 15%, 60%;
}

.red,
:root:has(#red:checked) {
	--main-dark: 344, 58%, 12%;
	--main-light: 344, 58%, 50%;

	--main-light-1: 344, 58%, 20%;
	--main-light-2: 344, 58%, 27%;
	--main-light-3: 344, 58%, 34%;

	--text: 0, 0%, 95%;
	--header: 59, 98%, 84%;
	--important: 221, 60%, 70%;
	--number: 220, 65%, 75%;
	--low-focus: 4, 60%, 75%;
}

.green,
:root:has(#green:checked) {
	--main-dark: 139, 17%, 14%;
	--main-light: 139, 17%, 40%;

	--main-light-1: 139, 17%, 20%;
	--main-light-2: 139, 17%, 25%;
	--main-light-3: 139, 17%, 29%;

	--text: 0, 0%, 95%;
	--header: 219, 80%, 70%;
	--important: 40, 70%, 70%;
	--number: 4, 88%, 70%;
	--low-focus: 170, 80%, 85%;
}

	*,
	*::before,
	*::after {
	box-sizing: border-box;
	}

	html {
	overflow-x: hidden;
	}

	body {
	color: hsl(var(--white));
	background-color: hsl(var(--main-dark));
	font-size: 1rem;
	font-family: "DM Sans", sans-serif;
	font-weight: 400;
	}

	.skip-link {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;

		padding: .5rem;

		color: black;
		background-color: white;
		text-align: center;

		z-index: 10;

		translate: 0 -100%;
		transition: translate 150ms ease-in-out;
	}

	.skip-link:is(:focus, :focus-within) {
		translate: 0 0;
	}

	/* Navbar */
	.navbar {
	width: 100vw;
	max-height: max-content;
	background-color: hsl(var(--main-dark));

	border-bottom: 1px solid hsl(var(--main-light-2), 50%);
	}

	.container-fluid {
	width: 100%;
	max-width: 1000px;

	margin: auto;
	}

	#Cozy-Nova {
	display: flex;
	align-items: center;
	gap: 0.25em;

	margin: 0;
	margin-inline-end: 0.5em;

	text-decoration: none;
	text-transform: uppercase;
	}

	#Cozy-Nova:hover {
	color: hsl(var(--header), 50%);
	}

	.site-navbar-list a {
	color: hsl(var(--nav-link));
	text-decoration: none;
	}

	.site-navbar-list a:hover {
	color: hsl(var(--nav-link), 50%);
	}

	.dropdown-toggle {
	display: flex;
	align-items: center;
	background-color: hsl(var(--main-dark)) !important;
	}

	.dropdown-menu {
	border: none;
	background-color: hsl(var(--main-light-2));
	overflow: hidden;
	}

	.dropdown-menu a:hover {
	color: white;
	background-color: hsl(var(--main-light-3));
	}

	.dropdown-item {
		color: white;
	}

	/* Footer */
	footer {
	display: flex;
	justify-content: center;
	flex-wrap: wrap;
	gap: 1em;

	width: 100vw;
	margin-top: auto;
	padding: 2em 0;

	color: hsl(var(--white));
	background-color: hsl(var(--main-dark));

	border-top: 1px solid hsl(var(--main-light-2), 50%);
	}
	footer p {
	margin: 0;
	padding: 0;
	}

	footer a {
	text-decoration: none;
	color: hsl(var(--important));
	}

	footer a:hover {
	color: hsl(var(--important), 60%);
	}

	footer > a > span:hover {
	text-decoration: underline;
	}

	@media only screen and (max-width: 570px) {
	footer > * {
		text-align: center;
		width: 100%;
		gap: 0;
	}

	footer p {
		padding-top: 0.75em;
	}

	footer a {
		padding-bottom: 0.75em;
	}
	}

	/* Utility classes */
	.shadow-container {
	box-shadow: 1px 1px 2px hsl(var(--main-dark), 20%);
	}

	.border-rounded {
	border-radius: 0.5em;
	}

	.header {
	color: hsl(var(--header));
	font-weight: 700;
	}

	.number {
	font-weight: bold;
	color: hsl(var(--number));
	}

	.low-focus {
	font-weight: bold;
	color: hsl(var(--low-focus));
	}

	.important {
	font-weight: 700;
	text-decoration: none;
	color: hsl(var(--important));
	}

	.important.link-contrast {
	color: hsl(var(--important));
	}

	.important:hover {
	color: hsl(var(--important), 50%);
	}

	.tip {
	font-weight: bold;
	color: hsl(var(--curiosity));
	}

	.tip-question {
	display: inline-block;
	margin: 0 0.1em;
	padding: 0.1em 0.55em;
	color: hsl(var(--link-light));
	background-color: hsl(var(--curiosity));
	border-radius: 0.25em;
	font-size: 0.75rem;

	user-select: none;
	}

	.tag {
	display: inline-block;
	margin: 0 0.1em;
	padding: 0.1em 0.4em;
	color: hsl(var(--white));
	background-color: hsl(var(--main-dark));
	border-radius: 0.25em;
	font-size: 0.75rem;

	user-select: none;
	}

	.code {
	display: inline-flex;
	align-items: center;

	margin: 0 0.15em;
	padding: 0.35em 0.75em;
	color: hsl(var(--code-text));
	background-color: hsl(var(--code));
	border-radius: 0.25em;

	font-size: 0.9rem;
	font-weight: 400;
	}

	.code.contrast {
	background-color: hsl(var(--code-contrast));
	}

	.new,
	.updated,
	.wip {
	padding: 0.2em 0.4em;
	color: hsl(var(--text));
	border-radius: 0.5em;
	font-size: 0.5rem;
	text-transform: uppercase;
	}

	.new {
	background-color: hsl(var(--important));
	}

	.updated {
	background-color: hsl(var(--curiosity));
	}

	.wip {
	background-color: hsl(var(--low-focus));
	}

	.skill {
	display: grid;
	grid-auto-flow: column;
	grid-template-columns: repeat(1, 1fr);
	place-content: center;
	gap: 0.5em;
	padding: 0.35em 0.65em;
	color: hsl(var(--text));
	background-color: hsl(var(--main-light));
	border-radius: 0.5em;
	font-weight: 700;
	cursor: pointer;
	text-decoration: none;
	}

	.skill:hover {
	color: hsl(var(--black));
	background-color: hsl(var(--white));
	}

	.skill:active {
	opacity: 0.5;
	}

	#btn-back-to-top {
	display: none;

	bottom: 20px;
	right: 20px;

	width: 40px;
	height: 40px;

	color: hsl(var(--white));
	background-color: hsl(var(--important));

	border: none;
	border-radius: 50%;

	position: fixed;
	}

	#btn-back-to-top:hover {
	background-color: hsl(var(--important));
	}

	#btn-back-to-top:active {
	scale: 1.05;
	}

	.text-default {
	display: block;
	}

	.text-swap {
	display: none;
	}
</style>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js" integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk" crossorigin="anonymous"></script>

  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>

  <!-- JS -->
  <script>
	import '/src/js/global.js';
  </script>
</body>
</html>
